<h3>Signup</h3>

<form action="/customer" method="POST" autocomplete="off">
  <input type="hidden" name="_id" value="{{customer._id}}">
  <div class="form-group">
    <label>Username</label>
    <input type="text" style="color: white;" class="form-control bg-dark" name="username" placeholder="username"
      value="{{customer.username}}">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="text" style="color: white;" class="form-control bg-dark" name="password" placeholder="password"
      value="{{customer.password}}">
  </div>
  <div class="form-group">
    <label>Address</label>
    <input type="text" style="color: white;" class="form-control bg-dark" name="address" placeholder="address"
      value="{{customer.address}}">
  </div>
  <div id="box" class="col-md-6 offset-md-3 text-center">
    <div class="form-group">
      <button type="submit" class="btn btn-success">Signup</button>
    </div>
  </div>
</form>